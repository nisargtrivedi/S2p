<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:paddingTop="10dp"
        android:id="@+id/item_data"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/event_main_img"
            app:civ_border_color="@android:color/white"
            app:civ_border_width="1dp"
            android:layout_marginLeft="5dp"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <com.s2paa.Utils.TTextView
            android:text="Maths"
            android:textColor="@android:color/black"
            android:id="@+id/event_name"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/event_main_img"
            android:layout_marginStart="5.dp" />
        <com.s2paa.Utils.TTextView
            android:ellipsize="end"
            android:layout_marginTop="5dp"
            android:maxLines="3"
            android:text="sadfsdfsdfdfdfsdfsfsdfsdfsdfsdfs"
            android:id="@+id/ddate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/event_name"
            android:layout_alignStart="@+id/event_name" />
    </RelativeLayout>
<TextView
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="1dp" />
</LinearLayout>