<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<include layout="@layout/toolbar" android:id="@+id/toolbar"></include>
    <LinearLayout
        android:background="@drawable/border_add_item"
        android:layout_below="@+id/toolbar"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.s2paa.Utils.EEditText
            android:drawableRight="@drawable/downarrow"
            android:paddingLeft="10dp"
            android:background="@drawable/border"
            android:id="@+id/leave_title"
            android:textColor="@android:color/black"
            android:hint="Enter Title"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
        <Spinner

            android:dropDownSelector="@drawable/downarrow"
            android:id="@+id/leave_student"
            android:paddingLeft="10dp"
            android:hint="Enter Student"
            android:background="@drawable/border"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
        <com.s2paa.Utils.EEditText
            android:drawableRight="@drawable/downarrow"
            android:editable="false"

            android:id="@+id/leave_date"
            android:paddingLeft="10dp"
            android:background="@drawable/border"
            android:hint="Enter Leave Date"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
        <com.s2paa.Utils.EEditText
            android:drawableRight="@drawable/downarrow"
            android:id="@+id/leave_days"
            android:paddingLeft="10dp"
            android:hint="Enter Number of Days"
            android:background="@drawable/border"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
        <com.s2paa.Utils.EEditText
            android:id="@+id/leave_detail"
            android:gravity="top"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:hint="Enter Details"
            android:background="@drawable/border"
            android:inputType="textLongMessage"
            android:layout_width="match_parent"
            android:layout_height="180dp" />
    </LinearLayout>
<android.support.v7.widget.AppCompatButton
    android:background="@color/APP_COLOR"
    android:text="Save"
    android:id="@+id/save"
    android:textColor="@android:color/white"
    android:layout_alignParentBottom="true"
    android:layout_width="match_parent"
    android:layout_height="40dp" />
</RelativeLayout>