<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <com.s2paa.Utils.TTextView
            android:id="@+id/date"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="13sp"
            android:text="21/05/2017"
            android:layout_alignBottom="@+id/control"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />
        <Button
            android:visibility="gone"
            android:layout_marginLeft="5dp"
            android:textColor="@android:color/white"
            android:background="@color/APP_COLOR"
            android:text="Accept"
            android:textSize="12sp"
            android:id="@+id/accept"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/control"
            android:layout_marginEnd="11dp" />
        <com.s2paa.Utils.TTextView
            android:id="@+id/control"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/date"
            android:background="@drawable/leave_control" />
        <com.s2paa.Utils.TTextView
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:gravity="center|left"
            android:id="@+id/reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:text="sadfsdfsdfdsfds"
            android:layout_alignBottom="@+id/control"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/control"
            android:layout_alignParentTop="true" />
        <com.s2paa.Utils.TTextView
            android:layout_below="@+id/control"
            android:id="@+id/line"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/date"
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:background="@android:color/black"></com.s2paa.Utils.TTextView>
        <com.s2paa.Utils.TTextView
            android:id="@+id/detail"
            android:maxLines="2"
            android:text="sadfsadfsfdsfdsffdsfssssssssssssssssssssssssssss"
            android:ellipsize="end"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/control" />
    </RelativeLayout>

</LinearLayout>