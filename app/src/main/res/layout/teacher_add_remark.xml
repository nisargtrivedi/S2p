<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar"></include>
    <LinearLayout
        android:background="@drawable/border_add_item"
        android:layout_below="@+id/toolbar"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="left|center"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <com.s2paa.Utils.TTextView
            android:layout_weight="1.5"
            android:paddingLeft="10dp"
            android:text="Title"
            android:textSize="18sp"
            android:gravity="left|center"
            android:hint="Select Standard"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <com.s2paa.Utils.EEditText
            android:layout_weight="0.5"
            android:paddingLeft="10dp"
            android:hint="Enter Title"
            android:id="@+id/title"
            android:drawableRight="@drawable/downarrow"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
</LinearLayout>
        <com.s2paa.Utils.TTextView
            android:background="@color/APP_COLOR"
            android:layout_width="match_parent"
            android:layout_height="1dp"></com.s2paa.Utils.TTextView>
    <LinearLayout
        android:gravity="left|center"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <com.s2paa.Utils.TTextView
            android:layout_weight="1.5"
            android:paddingLeft="10dp"
            android:text="Details"
            android:textSize="18sp"
            android:gravity="left|center"
            android:hint="Select Standard"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <com.s2paa.Utils.EEditText
            android:layout_weight="0.5"
                android:drawableRight="@drawable/downarrow"

                android:paddingLeft="10dp"
                android:hint="Enter Details"
                android:id="@+id/details"
                android:layout_width="match_parent"
                android:layout_height="50dp" />
   </LinearLayout>
        <com.s2paa.Utils.TTextView
            android:background="@color/APP_COLOR"
            android:layout_width="match_parent"
            android:layout_height="1dp"></com.s2paa.Utils.TTextView>

        <LinearLayout
        android:gravity="left|center"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <com.s2paa.Utils.TTextView
            android:layout_weight="1.5"
            android:paddingLeft="10dp"
            android:text="Standard"
            android:textSize="18sp"
            android:gravity="left|center"
            android:hint="Select Standard"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <com.s2paa.Utils.TTextView
            android:layout_weight="0.5"
            android:drawableRight="@drawable/downarrow"
            android:id="@+id/standard"

            android:paddingLeft="10dp"
            android:gravity="center|left"
            android:textSize="18sp"
            android:hint="Select Class"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
   </LinearLayout>
        <com.s2paa.Utils.TTextView
            android:background="@color/APP_COLOR"
            android:layout_width="match_parent"
            android:layout_height="1dp"></com.s2paa.Utils.TTextView>

        <LinearLayout
        android:gravity="left|center"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <com.s2paa.Utils.TTextView
            android:layout_weight="1.5"
            android:paddingLeft="10dp"
            android:text="Section"
            android:textSize="18sp"
            android:gravity="left|center"
            android:hint="Select Standard"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <com.s2paa.Utils.TTextView
            android:id="@+id/division"
            android:paddingLeft="10dp"
            android:drawableRight="@drawable/downarrow"
            android:gravity="center|left"
            android:textSize="18sp"
            android:hint="Select Section"
android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
    </LinearLayout>
        <com.s2paa.Utils.TTextView
            android:background="@color/APP_COLOR"
            android:layout_width="match_parent"
            android:layout_height="1dp"></com.s2paa.Utils.TTextView>

        <LinearLayout
        android:gravity="left|center"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <com.s2paa.Utils.TTextView
            android:layout_weight="1.5"
            android:paddingLeft="10dp"
            android:text="Student"
            android:textSize="18sp"
            android:gravity="left|center"
            android:hint="Select Standard"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/student"
            android:layout_weight="0.5"
            android:drawableRight="@drawable/downarrow"
            android:theme="@style/ThemeOverlay.AppCompat.Light"
            android:spinnerMode="dropdown"
            android:backgroundTint="@color/APP_COLOR"
            android:layout_width="match_parent"
            android:layout_height="50dp">
        </android.support.v7.widget.AppCompatSpinner>
    </LinearLayout>
        <com.s2paa.Utils.TTextView
            android:background="@color/APP_COLOR"
            android:layout_width="match_parent"
            android:layout_height="1dp"></com.s2paa.Utils.TTextView>
    </LinearLayout>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btnsave"
        android:text="SAVE"
        android:textColor="@color/white"
        android:background="@color/APP_COLOR"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
</RelativeLayout>