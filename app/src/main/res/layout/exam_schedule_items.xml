<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<com.s2paa.Utils.TTextView
    android:id="@+id/examdate"
    android:textSize="15sp"
    android:textColor="@android:color/black"
    android:layout_width="match_parent"
    android:text="Monday,24 July 2017"
    android:layout_height="wrap_content" />
    <LinearLayout
        android:background="@drawable/border_exam_schedule"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginTop="5dp"
            android:paddingLeft="5dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.s2paa.Utils.TTextView
                android:textColor="@android:color/black"
                android:id="@+id/subjects"
                android:text="Maths"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.s2paa.Utils.TTextView
                android:textColor="@android:color/black"
                android:layout_below="@+id/subjects"
                android:id="@+id/classroom"
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Classroom:10" />
        </RelativeLayout>
<LinearLayout
    android:gravity="center"
    android:layout_gravity="center"
    android:layout_weight="1"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="50dp">
<com.s2paa.Utils.TTextView
    android:id="@+id/from_time"
    android:layout_weight="1"
    android:text="7:00 AM"
    android:padding="3dp"
    android:gravity="center"
    android:textColor="@android:color/white"
    android:background="@color/EXAM_SCHEDULE_TIME"
    android:layout_width="match_parent"
    android:layout_height="30dp" />

    <com.s2paa.Utils.TTextView

        android:padding="3dp"
        android:gravity="center"
        android:id="@+id/to_time"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:background="@color/EXAM_SCHEDULE_TIME_TWO"
        android:text="8:00 AM"
        android:textColor="@android:color/white" />
</LinearLayout>
    </LinearLayout>


</LinearLayout>