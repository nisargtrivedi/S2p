<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<include layout="@layout/toolbar"></include>
    <com.s2paa.Utils.TTextView
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/result_show"
        android:text="Show result Subject wise"
        android:background="@color/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:id="@+id/extra_data"
        android:layout_marginTop="1dp"
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <com.s2paa.Utils.TTextView
            android:background="@color/result"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/standard"
            android:layout_marginRight="1dp"
            android:textColor="@android:color/white"
            android:text="Select Standard"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <com.s2paa.Utils.TTextView
            android:layout_marginLeft="1dp"
            android:background="@color/result"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/division"
            android:textColor="@android:color/white"
            android:text="Select Division"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <com.s2paa.Utils.TTextView
            android:layout_marginLeft="1dp"
            android:background="@color/result"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/subject"
            android:textColor="@android:color/white"
            android:text="Subject"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="1dp"
        android:gravity="center"
        android:background="@color/result"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="35dp">

        <com.s2paa.Utils.TTextView
            android:layout_weight="1"
            android:text="0"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:id="@+id/total_marks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <com.s2paa.Utils.TTextView
            android:layout_weight="1"
            android:text="0"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:id="@+id/avg_marks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout

        android:gravity="center"
        android:background="@color/result"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="35dp">
        <com.s2paa.Utils.TTextView
            android:layout_weight="1"
            android:text="Total Marks"
            android:id="@+id/_total"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <com.s2paa.Utils.TTextView
            android:id="@+id/_grade"
            android:layout_weight="1"
            android:text="Average Grade Point"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:background="@color/result_header"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="35dp">
        <com.s2paa.Utils.TTextView
            android:layout_weight="1"
            android:text="Student"
            android:layout_marginLeft="5dp"
            android:gravity="left"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <com.s2paa.Utils.TTextView
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:text="Obtain\nMarks"
            android:gravity="right"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <com.s2paa.Utils.TTextView
            android:layout_weight="1"
            android:text="Total\nMarks"
            android:gravity="right"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <com.s2paa.Utils.TTextView
            android:layout_weight="1"
            android:text="Grade"
            android:paddingRight="5dp"
            android:gravity="right"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
