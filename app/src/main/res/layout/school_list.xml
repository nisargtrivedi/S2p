            <!--android:layout_width="match_parent"-->
            <!--android:id="@+id/rv_school"-->
            <!--android:layout_margin="10dp"-->
            <!--android:layout_height="wrap_content">-->

        <!--</android.support.v7.widget.RecyclerView>-->
